<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<%= button_to 'Extraction', export_products_path(format: :csv), method: :patch, class: "fa fa-plus btn btn-success"%>
<%= button_to 'Extraction json', products_path(format: :json), method: :get, class: "fa fa-plus btn btn-success"%>

<div class="mt-4">
  <%= form_tag products_path, method: :get, class: "form-inline justify-content-center" do %>
    <%= text_field_tag :search, params[:search], class: "form-control mr-2", placeholder: "Search" %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>
<br>

<div id="products" style="display:flex;">
  <% @products.each do |product| %>
  <div style="display:flex; flex-direction:column; margin: 20px; border: solid 1px; padding: 5px; border-radius:3px">
    <%= render product %>
  </div>
  <% end %>
</div>

<%= link_to "New product", new_product_path %>
